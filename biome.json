{
    "$schema": "https://biomejs.dev/schemas/1.8.0/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": false,
        "ignore": [
            "**/node_modules/**",
            "**/dist/**",
            "**/build/**",
            "**/.vscode/**",
            "**/.idea/**"
        ],
        "indentWidth": 4,
        "indentStyle": "space",
        "lineWidth": 80
    },
    "javascript": {
        "parser": {
            "unsafeParameterDecoratorsEnabled": true
        },
        "formatter": {
            "enabled": true,
            "quoteStyle": "single",
            "jsxQuoteStyle": "single",
            "trailingCommas": "all",
            "semicolons": "asNeeded",
            "arrowParentheses": "asNeeded",
            "indentWidth": 4,
            "indentStyle": "space",
            "lineWidth": 80,
            "quoteProperties": "asNeeded"
        }
    },
    "json": {
        "parser": {
            "allowComments": true
        },
        "formatter": {
            "enabled": true,
            "indentStyle": "space",
            "indentWidth": 4,
            "lineWidth": 80
        }
    },
    "css": {
        "parser": {
            "cssModules": true
        }
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    }
}
